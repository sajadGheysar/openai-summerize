{
    "manifest_version": 3,
    "name": "OpenAI Article Summarizer",
    "version": "1.0",
    "description": "Summarize articles using the OpenAI API",
    "permissions": ["activeTab", "storage", "contextMenus"],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  